{{!--
Re-usable card for linking to posts
--}}
<article class="post-card {{if this.post.image 'with-image' 'no-image'}}">
  <div class="gh-card-link">
    <LinkTo @route="post" @model={{this.post.id}}>
      {{#if this.post.image}}
      <img class="gh-card-image" src={{this.post.image}} alt={{this.post.title}} />
      {{/if}}
      <div class="gh-card-content">
        <span class="gh-card-meta"><time
            datetime="{{date format="YYYY-MM-DD"}}">{{date format="D MMM YYYY"}}</time></span>
        <h2 class="gh-card-title">{{this.post.title}}</h2>
        <p>{{excerpt this.post.content words="20"}}</p>
        <strong>Read more</strong>
      </div>
    </LinkTo>
  </div>
</article>